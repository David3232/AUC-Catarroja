{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/form.css') }}"/>
{% endblock %}
{% block body %}

    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="form">
        <form class="needs-validation" novalidate>
            <div class="head">
                <h1>Crear Usuario</h1>
            </div>
            <div class="form-row">
                <div class="col-md-6 lg-6 sm-12">
                    <label for="validationCustom01">Nombre</label>
                    <div id="name">
                        {{ form_widget(form.name) }}
                    </div>
                    <div id="nameError" class="invalid-feedback" style="display: none">
                        Por favor, selecciona un nombre
                    </div>
                    <div id="nameCorrect" class="valid-feedback" style="display: none">
                        Campo correct
                    </div>
                </div>
                <div class="col-md-6 lg-6 sm-12">
                    <label for="validationCustom02">Apellido 1</label>
                    <div id="surname">
                        {{ form_widget(form.surname1) }}
                    </div>
                    <div id="surnameError" class="invalid-feedback" style="display: none">
                        Por favor, selecciona un apellido
                    </div>
                    <div id="surnameCorrect" class="valid-feedback" style="display: none">
                        Campo correct
                    </div>
                </div>
                <div class="col-md-6 lg-6 sm-12">
                    <label for="validationCustom02">Apellido 2</label>
                    <div id="surname">
                        {{ form_widget(form.surname2) }}
                    </div>
                    <div id="surnameError" class="invalid-feedback" style="display: none">
                        Por favor, selecciona un apellido
                    </div>
                    <div id="surnameCorrect" class="valid-feedback" style="display: none">
                        Campo correct
                    </div>
                </div>
            <div class="form-row">
                <div class="col-md-3 lg-6 sm-12">
                    <label for="validationCustom05">Address</label>
                    <div id="zip">
                        {{ form_widget(form.adress) }}
                    </div>
                    <div id="zipError" class="invalid-feedback" style="display: none">
                        Por favor, selecciona un codigo postal
                    </div>
                    <div id="zipCorrect" class="valid-feedback" style="display: none">
                        Campo correct
                    </div>
                </div>
                <div class="col-md-3 lg-6 sm-12">
                    <label for="validationCustom05">Zip Code</label>
                    <div id="zip">
                        {{ form_widget(form.zipCode) }}
                    </div>
                    <div id="zipError" class="invalid-feedback" style="display: none">
                        Por favor, selecciona un codigo postal
                    </div>
                    <div id="zipCorrect" class="valid-feedback" style="display: none">
                        Campo correct
                    </div>
                </div>
                <div class="col-md-3 lg-6 sm-12">
                    <label for="validationCustom05">Location</label>
                    <div id="zip">
                        {{ form_widget(form.location) }}
                    </div>
                    <div id="zipError" class="invalid-feedback" style="display: none">
                        Por favor, selecciona un codigo postal
                    </div>
                    <div id="zipCorrect" class="valid-feedback" style="display: none">
                        Campo correct
                    </div>
                </div>
                <div class="col-md-3 lg-6 sm-12">
                    <label for="validationCustom05">Email</label>
                    <div id="zip">
                        {{ form_widget(form.email) }}
                    </div>
                    <div id="zipError" class="invalid-feedback" style="display: none">
                        Por favor, selecciona un codigo postal
                    </div>
                    <div id="zipCorrect" class="valid-feedback" style="display: none">
                        Campo correct
                    </div>
                </div>
                <div class="col-md-3 lg-6 sm-12">
                    <label for="validationCustom05">Fecha de nacimiento</label>
                    <div id="zip">
                        {{ form_widget(form.bornDate) }}
                    </div>
                    <div id="zipError" class="invalid-feedback" style="display: none">
                        Por favor, selecciona un codigo postal
                    </div>
                    <div id="zipCorrect" class="valid-feedback" style="display: none">
                        Campo correct
                    </div>
                </div>
                <div class="col-md-3 lg-6 sm-12">
                    <label for="validationCustom05">Id Document</label>
                    <div id="zip">
                        {{ form_widget(form.idDocument) }}
                    </div>
                    <div id="zipError" class="invalid-feedback" style="display: none">
                        Por favor, selecciona un codigo postal
                    </div>
                    <div id="zipCorrect" class="valid-feedback" style="display: none">
                        Campo correct
                    </div>
                </div>
                <div class="col-md-3 lg-6 sm-12">
                    <label for="validationCustom05">Comentario</label>
                    <div id="zip">
                        {{ form_widget(form.comment) }}
                    </div>
                    <div id="zipError" class="invalid-feedback" style="display: none">
                        Por favor, selecciona un codigo postal
                    </div>
                    <div id="zipCorrect" class="valid-feedback" style="display: none">
                        Campo correct
                    </div>
                </div>
                <div class="col-md-3 lg-6 sm-12">
                    <label for="validationCustom05">Rol</label>
                    <div id="zip">
                        {{ form_widget(form.role) }}
                    </div>
                    <div id="zipError" class="invalid-feedback" style="display: none">
                        Por favor, selecciona un codigo postal
                    </div>
                    <div id="zipCorrect" class="valid-feedback" style="display: none">
                        Campo correct
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                    <label class="form-check-label" for="invalidCheck">
                        Acepta términos y condiciones de uso
                    </label>

                    <div class="invalid-feedback">
                        Tienes que aceptar términos y condiciones de uso antes
                    </div>
                </div>
            </div>
            <input class="btn btn-primary" id="formButton" type="submit" value="Create" />
            </div>
        </form>
    </div>
    {{ form_end(form) }}
    <script src="{{ asset('js/form.js') }}"></script>
{% endblock %}
