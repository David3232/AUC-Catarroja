{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido1</th>
                <th>Apellido2</th>
                <th>Direccion</th>
                <th>Cp</th>
                <th>Localizacion</th>
                <th>Email</th>
                <th>Fechanacimiento</th>
                <th>Fechacreacion</th>
                <th>Documentoidentidad</th>
                <th>Observaciones</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.nombre }}</td>
                <td>{{ user.apellido1 }}</td>
                <td>{{ user.apellido2 }}</td>
                <td>{{ user.direccion }}</td>
                <td>{{ user.cp }}</td>
                <td>{{ user.localizacion }}</td>
                <td>{{ user.email }}</td>
                <td>{% if user.fechaNacimiento %}{{ user.fechaNacimiento|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ user.fechaCreacion }}</td>
                <td>{{ user.documentoIdentidad }}</td>
                <td>{{ user.observaciones }}</td>
                <td>{{ user.role }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new user</a>
        </li>
    </ul>
{% endblock %}
