{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap-responsive.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/main.css') }}"/>
{% endblock %}
{% block body %}
    <div class="container">
        <div class="titleForm mt-4" align="center">
            <h1>Lista de usuarios</h1>
        </div>
        <table class="tableList display" width="100%">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>Discapacidad</th>
                <th>Acción</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.surname1 }} {{ user.surname2 }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.telephone }}</td>
                    <td>
                        {% for disability in user.disabilities %}
                            {{ disability }}
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('user_show', { 'id': user.id }) }}"><img src="{{ asset('imagenes/show.png') }}" class="actions pl-2 pr-2" alt="Show"></a>
                        <a href="{{ path('user_edit', { 'id': user.id }) }}"><img src="{{ asset('imagenes/edit.png') }}" class="actions pl-2 pr-2" alt="Edit"></a>
                        <a href="{{ path('user_delete', {'id': user.id}) }}"><img src="{{ asset('imagenes/delete.png') }}" class="actions" alt="Borrar"></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="row">
            <div class="col-md-4 float-left">
                <a class="shadow btn btn-primary border-dark" href="{{ path('user_new') }}">Create a new user</a>
            </div>
        </div>
    </div>
{% endblock %}
