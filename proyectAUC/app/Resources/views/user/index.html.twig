{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap-responsive.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/main.css') }}"/>
{% endblock %}
{% block body %}
    <div class="container">
        <div class="titleForm">
            <h1>Users list</h1>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card shadow border-dark p-4">
                    <!-- Fila  -->
                    <div class="row">
                        <div class=" col-11">
                            <div class="row">
                                <div class=" col-md-2">
                                    <label class="font-weight-bold">Nombre</label>
                                </div>
                                <div class=" col-md-3">
                                    <label class="font-weight-bold">Apellidos</label>
                                </div>
                                <div class=" col-md-2">
                                    <label class="font-weight-bold">Email</label>
                                </div>
                                <div class=" col-md-2">
                                    <label class="font-weight-bold">Tel√©fono</label>
                                </div>
                                <div class=" col-md-3">
                                    <label class="font-weight-bold">Discapacidades</label>
                                </div>
                            </div>
                        </div>
                        <div class=" col-1">
                            <label class="font-weight-bold">Acciones</label>
                        </div>
                    </div>
                    <!-- Fila -->
                    {% for user in users %}
                        <div class="row border shadow border-secondary rounded pl-1 mb-4">
                            <div class="form-group col-11">
                                <div class="row">
                                    <div class="col-md-2 pl-2 p-2">
                                        <div class="form-group border shadow border-secondary rounded pl-2 mt-2">
                                            <label>{{ user.name }}</label>
                                        </div>
                                    </div>
                                    <div class="col-md-3 pl-2 p-2">
                                        <div class="form-group border shadow border-secondary rounded pl-2 mt-2">
                                            <label>{{ user.surname1 }} {{ user.surname2 }}</label>
                                        </div>
                                    </div>
                                    <div class="col-md-2 pl-2 p-2">
                                        <div class="form-group border shadow border-secondary rounded pl-2 mt-2">
                                            <label>{{ user.email }}</label>
                                        </div>
                                    </div>
                                    <div class="col-md-2 pl-2 p-2">
                                        <div class="form-group border shadow border-secondary rounded pl-2 mt-2">
                                            <label>{{ user.telephone }}</label>
                                        </div>
                                    </div>
                                    <div class="col-md-3 pl-2 p-2">
                                        <div class="form-group border shadow border-secondary rounded pl-2 mt-2">
                                            <label>
                                                {% for disability in user.disabilities %}
                                                    {{ disability }}
                                                {% endfor %}
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-1">
                                <div class="form-group mt-3">
                                    <a href="{{ path('user_show', { 'id': user.id }) }}"><img src="{{ asset('imagenes/show.png') }}" class="actions pl-2 pr-2" alt="Show"></a>
                                    <a href="{{ path('user_edit', { 'id': user.id }) }}"><img src="{{ asset('imagenes/edit.png') }}" class="actions" alt="Edit"></a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        </div>
    </div>

    <div class="createButton">
        <a class="btn btn-primary stretched-link" href="{{ path('user_new') }}">Create a new user</a>
    </div>
{% endblock %}
