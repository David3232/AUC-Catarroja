{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/form.css') }}"/>
{% endblock %}
{% block body %}
    <div class="form">
        <form class="needs-validation" novalidate>
            <div class="head">
                <h1>Crear Usuario</h1>
            </div>
            <div class="form-row">
                <div class="col-md-6 lg-6 sm-12">
                    <label for="validationCustom01">Nombre</label>
                    <input type="text" class="form-control" id="name" placeholder="Nombre" required>
                    <div id="nameError" class="invalid-feedback" style="display: none">
                        Por favor, selecciona un nombre
                    </div>
                    <div id="nameCorrect" class="valid-feedback" style="display: none">
                        Campo correct
                    </div>
                </div>
                <div class="col-md-6 lg-6 sm-12">
                    <label for="validationCustom02">Apellido</label>
                    <input type="text" class="form-control" id="surname" placeholder="Apellido" required>
                    <div id="surnameError" class="invalid-feedback" style="display: none">
                        Por favor, selecciona un apellido
                    </div>
                    <div id="surnameCorrect" class="valid-feedback" style="display: none">
                        Campo correct
                    </div>
                </div>
                <div class="col-md-6 lg-6 sm-12">
                    <label for="validationCustomUsername">Username</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroupPrepend">@</span>
                        </div>
                        <input type="text" class="form-control" id="username" placeholder="Username" aria-describedby="inputGroupPrepend" required>
                        <div id="usernameError" class="invalid-feedback" style="display: none">
                            Por favor, selecciona un nombre de usuario valida
                        </div>
                        <div id="usernameCorrect" class="valid-feedback" style="display: none">
                            Campo correct
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 lg-6 sm-12">
                    <label for="validationCustom03">City</label>
                    <input type="text" class="form-control" id="city" placeholder="City" required>
                    <div id="cityError" class="invalid-feedback" style="display: none">
                        Por favor, selecciona una ciudad valida
                    </div>
                    <div id="cityCorrect" class="valid-feedback" style="display: none">
                        Campo correct
                    </div>
                </div>
                <div class="col-md-3 lg-6 sm-12">
                    <label for="validationCustom05">Código postal</label>
                    <input type="text" class="form-control" id="zip" placeholder="Zip" required>
                    <div id="zipError" class="invalid-feedback" style="display: none">
                        Por favor, selecciona un codigo postal
                    </div>
                    <div id="zipCorrect" class="valid-feedback" style="display: none">
                        Campo correct
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                    <label class="form-check-label" for="invalidCheck">
                        Acepta términos y condiciones de uso
                    </label>

                    <div class="invalid-feedback">
                        Tienes que aceptar términos y condiciones de uso antes
                    </div>
                </div>
            </div>
            <button class="btn btn-primary" id="formButton" disabled type="submit">Submit form</button>
        </form>
    </div>
    <script src="{{ asset('js/form.js') }}"></script>
{% endblock %}