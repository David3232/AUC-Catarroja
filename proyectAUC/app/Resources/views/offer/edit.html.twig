{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(edit_form, { 'attr':{'id': 'formOffer' }}) }}
    {{ form_errors(edit_form) }}
<section>
    <div class="form container-fluid">
        <form class="formOffer" novalidate>
            <header>
                <h1 class="text-center">Editar Oferta</h1>
            </header>
            <div class="row">
                <div class="col-md-12">
                    <div class="card shadow border-dark p-4">
                        <div class="row">
                            <div class="form-group col-md-4">
                                <label for="validationCustom01" class="font-weight-bold">Compañia</label>
                                <div id="company_div">
                                    {{ form_widget(edit_form.company, { 'attr': {'class': 'border shadow border-secondary rounded pl-2 p-2  col-md-9 lg-9 sm-9', 'id': 'company' } }) }}
                                </div>
                                <div id="companyError" class="invalid-feedback" style="display: none">
                                    Por favor, selecciona una compañia
                                </div>
                                <div id="companyCorrect" class="valid-feedback" style="display: none">
                                    Campo correcto
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="validationCustom02" class="font-weight-bold">Title</label>
                                <div id="title_div">
                                    {{ form_widget(edit_form.title, { 'attr': {'class': 'border shadow border-secondary rounded pl-2 p-2 col-md-12 lg-12 sm-12', 'id': 'title' } }) }}
                                </div>
                                <div id="titleError" class="invalid-feedback" style="display: none">
                                    Por favor, selecciona un titulo
                                </div>
                                <div id="titleCorrect" class="valid-feedback" style="display: none">
                                    Campo correcto
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="validationCustom02" class="font-weight-bold">Telephone</label>
                                <div id="telephone_div">
                                    {{ form_widget(edit_form.telephone, { 'attr': {'class': 'border shadow border-secondary rounded pl-2 p-2 col-md-12 lg-12 sm-12', 'id': 'telephone' } }) }}
                                </div>
                                <div id="telephoneError" class="invalid-feedback" style="display: none">
                                    Por favor, selecciona un telefono
                                </div>
                                <div id="telephoneCorrect" class="valid-feedback" style="display: none">
                                    Campo correcto
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="validationCustom05" class="font-weight-bold">PDF</label>
                                <div id="pdf_div">
                                    {{ form_widget(edit_form.pdf, { 'attr': {'class': 'border shadow border-secondary rounded pl-2 p-2 col-md-12 lg-12 sm-12', 'id': 'pdf' } }) }}
                                </div>
                                <div id="pdfError" class="invalid-feedback" style="display: none">
                                    Por favor, selecciona un pdf
                                </div>
                                <div id="pdfCorrect" class="valid-feedback" style="display: none">
                                    Campo correcto
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="validationCustom05" class="font-weight-bold">Descripciones</label>
                                <div id="description_div">
                                    {{ form_widget(edit_form.description, { 'attr': {'class': 'border shadow border-secondary rounded pl-2 p-2 col-md-12 lg-12 sm-12', 'id': 'description' } }) }}
                                </div>
                                <div id="descriptionError" class="invalid-feedback" style="display: none">
                                    Por favor, escribe una descripción.
                                </div>
                                <div id="descriptionCorrect" class="valid-feedback" style="display: none">
                                    Campo correcto
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="validationCustom05" class="font-weight-bold">Discapacidades</label>
                                <div id="disabilities_div">
                                    {{ form_widget(edit_form.disabilities, { 'attr': {'class': 'border shadow border-secondary rounded pl-2 p-2 col-md-12 lg-12 sm-12', 'id': 'disabilities' } }) }}
                                </div>
                                <div id="disabilitiesError" class="invalid-feedback" style="display: none">
                                    Por favor, selecciona las discapacidades
                                </div>
                                <div id="disabilitiesCorrect" class="valid-feedback" style="display: none">
                                    Campo correcto
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-4 float-left">
                                <input class="btn btn-primary shadow border-dark" id="formButton" type="submit" value="Editar" />
                                <a class="shadow btn btn-primary border-dark" href="{{ path('user_index') }}">Volver a
                                    Oferta</a>
                            </div>
                            <div class="col-md-8">
                                {{ form_start(delete_form) }}
                                <button class="shadow btn btn-danger float-right border-dark" type="submit">Borrar Oferta</button>
                                {{ form_end(delete_form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{ form_rest(edit_form) }}
            </form>
        </div>
    {{ form_end(edit_form) }}

    <script src="{{ asset('js/jquery-3.3.1.slim.min.js') }}"></script>
    <script src="{{ asset('js/formOffer.js') }}"></script>
{% endblock %}
