{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap-responsive.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/main.css') }}"/>
{% endblock %}
{% block body %}
    <div class="container">
        <div class="titleForm mt-4" align="center">
            <h1>Lista de ofertas</h1>
        </div>
        <table class="tableList display" width="100%">
            <thead>
            <tr>
                <th>Título</th>
                <th>Descripción</th>
                <th>Email</th>
                <th>Acción</th>
            </tr>
            </thead>
            <tbody>
            {% for offer in offers %}
                <tr>
                    <td>{{ offer.title }}</td>
                    <td>{{ offer.description }}</td>
                    <td>{{ offer.email }}</td>
                    <td>
                        <a href="{{ path('offer_show', { 'id': offer.id }) }}"><img src="{{ asset('imagenes/show.png') }}" class="actions pl-2 pr-2" alt="Show"></a>
                        <a href="{{ path('offer_edit', { 'id': offer.id }) }}"><img src="{{ asset('imagenes/edit.png') }}" class="actions" alt="Edit"></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="row">
            <div class="col-md-4 float-left">
                <a class="shadow btn btn-primary border-dark" href="{{ path('offer_new') }}">Crear nueva oferta</a>
            </div>
        </div>
    </div>
{% endblock %}